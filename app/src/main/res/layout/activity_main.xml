<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="chong.wecanteen.com.myappportfolio.MainActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text= "@string/my_nanodegree_apps"
        android:gravity="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/popular_movies"
        android:textColor="#FFFFFF"
        android:background="#2E3D49" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="stock hawk"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:background="#2E3D49" />

    <Button
        android:id="@+id/btn3"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="build it bigger"
        android:textColor="#FFFFFF"
        android:background="#2E3D49" />

    <Button
        android:id="@+id/btn4"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="make your app material"
        android:textColor="#FFFFFF"
        android:background="#2E3D49" />

    <Button
        android:id="@+id/btn5"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="go ubiquitous"
        android:textColor="#FFFFFF"
        android:background="#2E3D49" />

    <Button
        android:id="@+id/btn6"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="capstone"
        android:textColor="#FFFFFF"
        android:background="#2E3D49" />

</LinearLayout>
