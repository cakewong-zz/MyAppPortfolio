<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="chong.wecanteen.com.myappportfolio.MainActivity">

    <TextView
        android:id="@+id/my_nanodegree_apps"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text= "@string/my_nanodegree_apps"
        android:textSize="20sp" />

    <Button
        android:layout_below="@id/my_nanodegree_apps"
        android:id="@+id/app_main_btn_1"
        android:text="@string/popular_movies"
        style="@style/PortfolioBtnCustom"/>

    <Button
        android:layout_below="@id/app_main_btn_1"
        android:id="@+id/app_main_btn_2"
        android:text="@string/stock_hawk"
        style="@style/PortfolioBtnCustom" />

    <Button
        android:layout_below="@id/app_main_btn_2"
        android:id="@+id/app_main_btn_3"
        android:text="@string/build_it_bigger"
        style="@style/PortfolioBtnCustom" />

    <Button
        android:layout_below="@id/app_main_btn_3"
        android:id="@+id/app_main_btn_4"
        android:text="@string/make_your_app_material"
        style="@style/PortfolioBtnCustom" />

    <Button
        android:layout_below="@id/app_main_btn_4"
        android:id="@+id/app_main_btn_5"
        android:text="@string/go_ubiquitous"
        style="@style/PortfolioBtnCustom" />

    <Button
        android:layout_below="@id/app_main_btn_5"
        android:id="@+id/app_main_btn_6"
        android:text="@string/capstone"
        style="@style/PortfolioBtnCustom" />

</RelativeLayout>
